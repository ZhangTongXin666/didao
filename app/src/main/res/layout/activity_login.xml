<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bg_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.kys_31.team.activity.MainActivity">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--第一行-->
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.example.kys_31.team.custom.RoundImageView
                android:id="@+id/riv_head"
                android:src="@mipmap/logo_logos"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android_custom:type="circle"/>

            <TextView
                android:text="递到"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"/>

        </LinearLayout>
        <!--第二行-->
        <LinearLayout
            android:paddingLeft="30dp"
            android:id="@+id/ll_account"
            android:layout_marginTop="60dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="13dp"
                android:src="@mipmap/icon_user"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView12"/>

            <EditText
                android:inputType="number"
                android:gravity="bottom"
                android:hint="手机号"
                android:paddingLeft="10dp"
                android:background="@null"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:id="@+id/et_account"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_clear_All"
                android:layout_marginTop="7dp"
                android:src="@mipmap/icon_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/iv_down"
                android:layout_marginTop="3dp"
                android:src="@mipmap/icon_down"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>

        <LinearLayout
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>

        <!--第三行-->
        <LinearLayout
            android:paddingLeft="30dp"
            android:id="@+id/ll_password"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="13dp"
                android:src="@mipmap/password"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView13"/>
            <EditText
                android:inputType=""
                android:hint="密码"
                android:password="true"
                android:digits="@string/limitstyle"
                android:paddingLeft="10dp"
                android:background="@null"
                android:gravity="bottom"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:id="@+id/et_password"/>

            <ImageView
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:src="@mipmap/icon_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/iv_clear_Password"/>
        </LinearLayout>
        <LinearLayout
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>
        <!--第四行-->
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/bt_login"
                android:textColor="@color/white"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:id="@+id/bt_login"/>
        </LinearLayout>

        <!--第五行-->
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:text="还没账号？用户注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_register"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
