<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--外围-->
    <LinearLayout
        android:layout_weight="1"
        android:background="@mipmap/mainservice_bg"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--第一行-->
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="用户日活跃度："
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_user_Sum"
                android:text="19802"
                android:textColor="@color/style_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!--第二行-->
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:completionThreshold="1"
                android:layout_weight="3"
                android:gravity="center"
                android:id="@+id/actv_school"
                android:hint="请选择学校"
                android:textColor="@color/black"
                android:background="@drawable/tv_skip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Space
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_name"
                android:gravity="center"
                android:layout_weight="5"
                android:hint="输入名字"
                android:textColor="@color/black"
                android:background="@drawable/et_sendtype"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Space
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_search"
                android:src="@drawable/iv_query"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <!--第三行-->
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/rg_select_Sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_all"
                    android:text="全部"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_man"
                    android:text="男"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_woman"
                    android:text="女"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
        </LinearLayout>
        <!--第四行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/down_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/lv_indent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
