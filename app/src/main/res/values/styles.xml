<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--PopupWindow动画-->
    <style name="AnimBottom">
        <item name="android:windowEnterAnimation">@anim/anim_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_exit</item>
    </style>
    <style name="AnimTop">
        <item name="android:windowEnterAnimation">@anim/anim_exit</item>
        <item name="android:windowExitAnimation">@anim/anim_enter</item>
    </style>
    <!--注册界面PopupWindow-->
    <style name="BottomPopWindowAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimAmount">0.2</item>
    </style>
</resources>
